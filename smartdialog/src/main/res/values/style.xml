        <item name="lib_dialog_middle_textsize">17dp</item>
        <item name="lib_dialog_middle_textcolor">#999999</item>
        <item name="lib_dialog_middle_background">#00000000</item>

        <item name="lib_dialog_right_textsize">17dp</item>
