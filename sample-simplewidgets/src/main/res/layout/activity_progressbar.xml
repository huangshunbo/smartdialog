<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.android.minlib.progressbar.SmartProgressBar
        android:id="@+id/progressbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:style="circle"
        app:background="@drawable/progressbar_background"
        app:foreground="@drawable/progressbar_foreground"
        app:second_foreground="@drawable/progressbar_background"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="1dp"
        android:background="@color/color_gray"
        android:layout_centerInParent="true"
        app:circle_startangle="90"
        app:circle_width="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"/>
        <Button
            android:id="@+id/add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"/>
    </LinearLayout>
</RelativeLayout>